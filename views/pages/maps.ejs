<div class="w-full lg:px-4 font-modern">
    <div class="flex flex-col lg:flex-row">
        <div class="min-h-full lg:w-3/5 bg-slate-300 relative">
            <div class="w-full h-screen lg:h-full z-0" id="map">
                <!-- map leaflet -->
            </div>
            <div class="absolute bottom-0 m-auto left-0 right-0 hidden md:block">
                <div class="bg-prime h-fit w-fit text-secondary rounded-md m-auto mb-4">
                    <h3 class="text-sm text-center pb-1">Air Quality</h3>
                    <div class="flex flex-row gap-3 px-2">
                        <section class="flex flex-col justify-center items-center">
                            <div class="bg-[#8BDB81] h-5 w-5 rounded-full"></div>
                            <p class="text-sm whitespace-nowrap">Good</p>
                        </section>
                        <section class="flex flex-col justify-center items-center">
                            <div class="bg-[#FFE162] h-5 w-5 rounded-full"></div>
                            <p class="text-sm">Moderate</p>
                        </section>
                        <section class="flex flex-col justify-center items-center">
                            <div class="bg-[#FF6464] h-5 w-5 rounded-full"></div>
                            <p class="text-sm">Unhealthy</p>
                        </section>
                        <section class="flex flex-col justify-center items-center">
                            <div class="bg-[#a070b6] h-5 w-5 rounded-full"></div>
                            <p class="text-sm">Very Unhealthy</p>
                        </section>
                        <section class="flex flex-col justify-center items-center">
                            <div class="bg-[#a06a7b] h-5 w-5 rounded-full"></div>
                            <p class="text-sm">Dangerous</p>
                        </section>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="lg:w-2/5 bg-[#EFFFFD] hidden lg:block">
            <div class="px-3 py-5 flex flex-col divide-y divide-slate-900">
                <section>
                    <span class="flex flex-row justify-start">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        <p class="text-xs px-1">Location</p>
                    </span>
                    <h3 class="py-2 text-sm"><span class="device-location">No Location</span> / sensor: <span class="device-name">No Sensor</span></h3>
                </section>
                <section>
                    <h1 class="text-sm py-5">AIR QUALITY</h1>
                    <span class="flex flex-col">
                        <h2 class="text-lg text-center title">Nothings Here</h2>
                        <p class="text-sm text-center px-28 sub-title">You haven't selected the desired location, try to click a location on the map!</p>
                        <img src="/img/air_quality/unselect.svg"  alt="very good air quality" class="h-36 py-6 cover-svg">
                    </span>
                </section>
                <section class="py-2 flex">
                    <img src="/img/icons/prime/pm10.svg" alt="pm10 icon" class="h-6 w-6">
                    <h2 class="text-sm px-1">PM10</h2>
                    <p class="ml-auto text-sm mx-10"><span class="pm10">0</span> µg/m³</p>
                </section>
                <section class="py-2 flex">
                    <img src="/img/icons/prime/co2.svg" alt="pm10 icon" class="h-6 w-6">
                    <h2 class="text-sm px-1">CO2</h2>
                    <p class="ml-auto text-sm mx-10"><span class="co2">0</span> ppm</p>
                </section>
                <section class="py-2 flex">
                    <img src="/img/icons/prime/temperature.svg" alt="pm10 icon" class="h-6 w-6">
                    <h2 class="text-sm px-1">Temperature</h2>
                    <p class="ml-auto text-sm mx-10"><span class="temperature">0</span>°C</p>
                </section>
                <section class="py-2 flex">
                    <img src="/img/icons/prime/humidity.svg" alt="pm10 icon" class="h-6 w-6">
                    <h2 class="text-sm px-1">Humidity</h2>
                    <p class="ml-auto text-sm mx-10"><span class="humidity">0</span>%</p>
                </section>
                <p class="text-xs pt-3 text-right">updated at : <span class="updated-at">-</span></p>
            </div>
        </div>
    </div>
</div>

